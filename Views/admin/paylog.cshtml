@model 游戏发布站.Models.User

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>充值记录</h1>
        <ol class="breadcrumb">
            <li><a href="Dashboard"><i class="fa fa-dashboard"></i>首页</a></li>
            <li class="active">记录管理</li>
            <li class="active">充值记录</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th width="5%"><font><font>序号</font></font></th>
                                    <th width="15%"><font><font>用户名</font></font></th>
                                    <th width="15%"><font><font>金额</font></font></th>
                                    <th width="15%"><font><font>余额</font></font></th>
                                    <th width="15%"><font><font>操作时间</font></font></th>
                                    <th width="15%"><font><font>操作类型</font></font></th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in ViewBag.paylog)
                                {

                                    <tr id="user_info_@item.id">
                                        <td>@item.id</td>
                                        <td>@item.username</td>
                                        <td> <span class="badge bg-danger">@item.amount</span></td>
                                        <td>@item.total</td>
                                        <td>@item.Creation_time</td>
                                        <td>@item.type</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>

    </section>
</div>
<script>
    $(document).ready(function () {

        $("table").bootstrapTable({
            search: true,
            pagination: true,
            pageSize: 20,
            pageList: [5, 10, 15],
            showColumns: true,
            showRefresh: true,
            locale: "zh-CN",
            striped: true,
            theadClasses: undefined
        });

    })
</script>
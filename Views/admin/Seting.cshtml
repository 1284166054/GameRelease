@model 游戏发布站.Models.Config

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>系统设置</h1>
        <ol class="breadcrumb">
            <li><a href="Dashboard"><i class="fa fa-dashboard"></i>首页</a></li>
            <li class="active">系统设置</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Info boxes -->
        <div class="row">


            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">网站设置</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {

                        <div class="box-body">
                            <div class="form-group">
                                <label for="title">网站状态</label>
                                <select name="type" class="form-control">
                                    <option id="type_1" value="1">开启</option>
                                    <option id="type_0" value="0">关闭</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="title">网站名称</label>
                                <input type="text" class="form-control" id="title" name="title" value="@ViewBag.Title" placeholder="输入网站显示名称">
                            </div>

                            <div class="form-group">
                                <label for="Keywords">Keywords</label>
                                <input type="text" class="form-control" id="Keywords" name="Keywords" value="@ViewBag.Keywords" placeholder="输入关键词">
                            </div>

                            <div class="form-group">
                                <label for="Description">Description</label>
                                <input type="text" class="form-control" id="Description" name="Description" value="@ViewBag.Description" placeholder="输入网站介绍">
                            </div>

                        </div>
                            <!-- /.box-body -->

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">保存</button>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    }
                        </div>




                    </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<script>
$(document).ready(function () {
     @{
         @:$("#type_@ViewBag.type").attr("selected", "selected");
         if (@ViewBag.regok == "ok")
         {
            @:layer.alert('保存成功', { icon: 6 });
         }
     }

});
</script>
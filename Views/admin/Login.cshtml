                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">登  录</button>
                </div>
                <!-- /.col -->
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        }
        <div style="margin-top:12px;">
            <a href="reg" class="text-center">还没有账号，点击这里注册</a>

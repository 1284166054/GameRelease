        <a href="/">游戏发布站</a>
    </div>

    <div class="login-box-body">
        <p class="login-box-msg">用户登录</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="用户名" name="username" required maxLength="14" minLength="4" />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input id="password" name="password" type="password" class="form-control" required maxLength="14" minLength="4" placeholder="密码">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
